{
  "name": "employeecreationapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/http-client": "^2.9.0",
    "@sap/approuter": "^10.14.2",
    "@sap/audit-logging": "^5.5.2",
    "@sap/cds": ">=5.4.0",
    "@sap/xsenv": "^3.2.1",
    "@sap/xssec": "^3.2.13",
    "circular-json": "^0.5.9",
    "express": "^4",
    "hdb": "^0.18.3",
    "jwt-decode": "^3.1.2",
    "passport": "^0.5.2"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.3",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch-ui": "cds watch --open ui/webapp/index.html?sap-ui-xx-viewCache=false#fe-lrop-v4",
    "undeploy": "cf undeploy EmployeeCreationApp --delete-services --delete-service-keys",
    "lint:be": "eslint . --ext .js",
    "lint:be:fix": "eslint . --ext .js --fix",
    "build": "cds build",
    "deploy": "cds deploy"
  },
  "cds": {
    "requires": {
      "db": {
        "[development]": {
          "kind": "sqlite",
          "credentials": {
            "database": "sqlite.db"
          }
        },
        "[production]": {
          "kind": "hana"
        }
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[development]": {
          "strategy": "mock",
          "users": {
            "admin": {
              "roles": [
                "uaa.user",
                "EmployeeCreation_KBU",
                "Tester"
              ]
            }
          }
        },
        "[production]": {
          "kind": "jwt-auth"
        }
      },
      "c4c_ac": {
        "kind": "odata-v2",
        "credentials": {
          "destination": "c4c_ac"
        }
      },
      "c4c_auto": {
        "kind": "odata-v2",
        "credentials": {
          "destination": "c4c_auto"
        }
      },
      "c4c_aerospace": {
        "kind": "odata-v2",
        "credentials": {
          "destination": "c4c_aerospace"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/ui"
  ]
}
